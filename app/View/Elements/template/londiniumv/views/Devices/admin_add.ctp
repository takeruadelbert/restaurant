                    "([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\." +
                    "([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\." +
                    "([01]?\\d\\d?|2[0-4]\\d|25[0-5])$";
            return value.match(ip);
        }, 'Invalid IP address');

        $('#formSubmit').validate({
            rules: {
                "data[Device][ip_address]": {
                    required: true,
                    IP4Checker: true
                }
            }
        });
    });
